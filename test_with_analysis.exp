#!/usr/bin/expect

# Set timeout
set timeout 30

# Clear debug log and output file
exec rm -f /tmp/rigel_debug.log
exec rm -f /tmp/rigel_output.txt

# Start logging
log_file /tmp/rigel_output.txt

# Start rigel
spawn env RIGEL_TEST_MODE=1 PROVIDER=ollama ./rigel-test-env --termflow

# Wait for prompt
expect "âœ¦"
sleep 1

puts "\n=== Starting test sequence ==="

# Test sequence with detailed logging
send "aaaa"
puts "Sent: aaaa"
sleep 0.5

send "\x0A"
puts "Sent: Ctrl+J (first)"
sleep 0.5

send "bbbb"  
puts "Sent: bbbb"
sleep 0.5

send "\x0A"
puts "Sent: Ctrl+J (second)"
sleep 0.5

send "cccc"
puts "Sent: cccc"  
sleep 0.5

send "\x0A"
puts "Sent: Ctrl+J (third)"
sleep 0.5

send "dddd"
puts "Sent: dddd"
sleep 1

puts "=== Capturing final state ==="

# Exit
send "\x03"
sleep 0.5
send "\x03"
expect eof

puts "=== Test completed ==="

# Close log
close

# Analyze the output
puts "=== ANALYZING INDENTATION ==="
exec python3 ./analyze_indentation.py /tmp/rigel_output.txt